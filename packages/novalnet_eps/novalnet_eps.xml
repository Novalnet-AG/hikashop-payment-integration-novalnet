<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="4.2" method="upgrade" group="hikashoppayment">
    <name>HikaShop Novalnet eps payment plugin</name>
    <creationDate>July 2020</creationDate>
    <version>11.2.1</version>
    <author>Novalnet AG</author>
    <authorEmail>technic@novalnet.de</authorEmail>
    <authorUrl>https://www.novalnet.de</authorUrl>
    <copyright>Copyright (c) Novalnet</copyright>
    <license>https://www.novalnet.de/payment-plugins/kostenlos/lizenz</license>
    <description>This plugin enables you to setup your Novalnet Eps</description>
    <languages>
        <language tag="en-GB">languages/en-GB/en-GB.plg_hikashoppayment_novalnet_eps.ini</language>
        <language tag="de-DE">languages/de-DE/de-DE.plg_hikashoppayment_novalnet_eps.ini</language>
    </languages>
    <files>
        <filename plugin="novalnet_eps">novalnet_eps.php</filename>
        <filename>novalnet_eps_end.php</filename>
        <filename>index.html</filename>
        <folder>languages</folder>
    </files>

    <params addpath="/components/com_hikashop/params">
        <param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
    </params>
    <config>
        <fields name="params" addfieldpath="/components/com_hikashop/fields">
            <fieldset name="basic">
                <field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
            </fieldset>
        </fields>
    </config>
</extension>
