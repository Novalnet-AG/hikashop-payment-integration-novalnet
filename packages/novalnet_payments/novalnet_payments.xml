<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="4.2" method="upgrade" group="hikashoppayment">
    <name>HikaShop Novalnet Global Configuration plugin</name>
    <creationDate>July 2020</creationDate>
    <version>11.2.1</version>
    <author>Novalnet AG</author>
    <authorEmail>technic@novalnet.de</authorEmail>
    <authorUrl>https://www.novalnet.de</authorUrl>
    <copyright>Copyright (c) Novalnet</copyright>
    <license>https://www.novalnet.de/payment-plugins/kostenlos/lizenz</license>
    <description>This plugin enables you to setup your Novalnet global configuration</description>
    <languages>
        <language tag="en-GB">languages/en-GB/en-GB.plg_hikashoppayment_novalnet_payments.ini</language>
        <language tag="de-DE">languages/de-DE/de-DE.plg_hikashoppayment_novalnet_payments.ini</language>
    </languages>
    <files>
        <filename plugin="novalnet_payments">novalnet_payments.php</filename>
        <filename>novalnet_install.php</filename>
        <filename>index.html</filename>
        <folder>assets</folder>
        <folder>helper</folder>
        <folder>api</folder>
        <folder>languages</folder>
    </files>
    <media destination="com_hikashop/images/payment" folder="assets/images">
        <filename>novalnet_cashpayment.png</filename>
        <filename>novalnet_banktransfer.png</filename>
        <filename>novalnet_cc.png</filename>
        <filename>novalnet_ideal.png</filename>
        <filename>novalnet_invoice.png</filename>
        <filename>novalnet_paypal.png</filename>
        <filename>novalnet_prepayment.png</filename>
        <filename>novalnet_sepa.png</filename>
        <filename>novalnet_eps.png</filename>
        <filename>novalnet_giropay.png</filename>
        <filename>novalnet_przelewy24.png</filename>
    </media>
    <scriptfile>novalnet_install.php</scriptfile>
    <params addpath="/components/com_hikashop/params">
        <param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
    </params>
    <config>
        <fields name="params" addfieldpath="/components/com_hikashop/fields">
            <fieldset name="basic">
                <field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
            </fieldset>
        </fields>
    </config>
</extension>
